{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "phyco",
  "version": "0.1.0",
  "identifier": "com.phyco.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "phyco",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [{
        "identifier": "default-capability",
        "windows": [
          "*"
        ],
        "permissions": [
          "core:default",
          "core:window:allow-close"
        ]
      }]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}